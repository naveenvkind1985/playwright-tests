{
  "name": "playwright-tests",
  "version": "1.0.0",
  "scripts": {
    "test": "playwright test",
    "test:all": "playwright test",
    "test:medical": "playwright test tests/e2e/medical/",
    "test:multilingual": "playwright test tests/e2e/multilingual/", 
    "test:ai": "playwright test tests/e2e/ai-case-processing/",
    "test:patient": "playwright test tests/e2e/medical/patient-registration.test.ts",
    "test:terminology": "playwright test tests/e2e/multilingual/medical-terminology.test.ts",
    "test:ai-workflows": "playwright test tests/e2e/ai-case-processing/medical-ai-workflows.test.ts",
    "test:ci": "playwright test --reporter=line,github",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
